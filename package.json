{
  "name": "overlay",
  "productName": "Overlay",
  "version": "1.0.1",
  "description": "AI-powered dictation app that transcribes speech and inserts text into any application",
  "main": ".webpack/main",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron-forge start",
    "oauth-server": "node oauth-server.js",
    "package": "cross-env NODE_ENV=production electron-forge package",
    "make": "cross-env NODE_ENV=production electron-forge make",
    "make:win": "cross-env NODE_ENV=production electron-forge make --platform=win32",
    "make:win64": "cross-env NODE_ENV=production electron-forge make --platform=win32 --arch=x64",
    "make:win32": "cross-env NODE_ENV=production electron-forge make --platform=win32 --arch=ia32",
    "make:mac": "cross-env NODE_ENV=production electron-forge make --platform=darwin",
    "make:mac-x64": "cross-env NODE_ENV=production electron-forge make --platform=darwin --arch=x64",
    "make:mac-arm64": "cross-env NODE_ENV=production electron-forge make --platform=darwin --arch=arm64",
    "package:win": "cross-env NODE_ENV=production electron-forge package --platform=win32",
    "package:mac": "cross-env NODE_ENV=production electron-forge package --platform=darwin",
    "publish": "cross-env NODE_ENV=production electron-forge publish",
    "publish:win": "cross-env NODE_ENV=production electron-forge publish --platform=win32",
    "publish:mac": "cross-env NODE_ENV=production electron-forge publish --platform=darwin",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects main renderer",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e"
  },
  "keywords": [
    "dictation",
    "speech-to-text",
    "AI",
    "productivity"
  ],
  "author": {
    "name": "Thinking Sound Lab",
    "email": "hello@thinkingsoundlab.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Thinking-Sound-Lab/Overlay.git"
  },
  "build": {
    "appId": "com.overlay.app",
    "productName": "Overlay",
    "copyright": "Copyright Â© 2025 Thinking Sound Lab",
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app requires microphone access to capture audio for dictation.",
        "NSSystemAdministrationUsageDescription": "This app requires system access to insert text into other applications.",
        "NSAppleEventsUsageDescription": "This app requires permission to send keystrokes and control other applications for text insertion."
      },
      "_comment": "Code signing disabled for unsigned testing builds. For production, uncomment and configure identity and provisioningProfile",
      "_codeSign": {
        "identity": "${env.APPLE_IDENTITY}",
        "provisioningProfile": "${env.APPLE_PROVISIONING_PROFILE}"
      },
      "_notarize": {
        "teamId": "${env.APPLE_TEAM_ID}",
        "appleId": "${env.APPLE_ID}",
        "appleIdPassword": "${env.APPLE_APP_PASSWORD}"
      }
    },
    "win": {
      "target": [
        {
          "target": "squirrel",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Overlay",
      "_comment": "verifyUpdateCodeSignature set to false for unsigned testing builds. Set to true for production with code signing.",
      "verifyUpdateCodeSignature": false
    },
    "squirrelWindows": {
      "iconUrl": "https://overlay.app/icon.ico",
      "loadingGif": "assets/install-spinner.gif",
      "msi": true,
      "remoteReleases": "${env.WINDOWS_UPDATE_SERVER_URL}"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@kayahr/jest-electron-runner": "^29.15.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/ffprobe-static": "^2.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "css-loader": "^6.11.0",
    "electron": "37.2.6",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "node-loader": "^2.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.56.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.541.0",
    "openai": "^4.104.0",
    "posthog-js": "^1.260.2",
    "posthog-node": "^5.7.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "robotjs": "^0.6.0",
    "tailwind-merge": "^3.3.1"
  }
}
